type User {
  id: ID! @unique
  name: String!
  nickname: String!
  email: String! @unique
  twitterHandle: String
  scratchingAutomated: Boolean @default(value: "false")
  isPrivate: Boolean @default(value: "false")
  visits: [Visit] @relation(name: "UserCountries")
}

type Country {
  id: ID! @unique
  name: String!
  code: String!
  visits: [Visit] @relation(name: "CountryVisits")
}

type Visit {
id: ID! @unique
user: User! @relation(name: "UserCountries")
country: Country! @relation(name: "CountryVisits")
note: String
level: Int
}
